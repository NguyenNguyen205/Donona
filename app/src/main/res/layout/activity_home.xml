<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".HomeActivity"
    tools:ignore="MissingConstraints">


    <!--    Navigation bar-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="227dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="54dp"
        android:contentDescription="donona_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_text" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffebc9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <!--    <com.google.android.material.textfield.TextInputLayout-->
    <!--        android:id="@+id/textInputLayout"-->
    <!--        android:layout_width="342dp"-->
    <!--        android:layout_height="25dp"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.6"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/imageView">-->

    <!--        <com.google.android.material.textfield.TextInputEditText-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->

    <!--            android:hint="Search" />-->
    <!--    </com.google.android.material.textfield.TextInputLayout>-->


    <!--   Card Slider  -->

    <GridLayout
        android:id="@+id/menu"
        android:layout_width="392dp"
        android:layout_height="169dp"
        android:layout_marginTop="232dp"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <ImageButton
            android:id="@+id/near_me"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:contentDescription="hello"
            android:elevation="2dp"
            android:onClick="onClickSuggest"
            android:padding="10dp"
            android:src="@drawable/near_me_fill_24px"
            android:translationZ="2dp"
            app:tint="@color/quite_brown" />

        <ImageButton
            android:id="@+id/map"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:contentDescription="hello"
            android:elevation="2dp"
            android:minHeight="50dp"
            android:onClick="onClickNearMe"
            android:padding="10dp"
            android:src="@drawable/map_fill_24px"
            android:translationZ="2dp"
            app:tint="@color/quite_brown" />

        <ImageButton
            android:id="@+id/upgrade"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:contentDescription="hello"
            android:elevation="2dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:src="@drawable/verified_24px"
            android:translationZ="2dp"
            app:tint="@color/quite_brown"
            android:onClick="onClickSubscription"
            />
        <ImageButton
            android:id="@+id/bookmark"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:contentDescription="hello"
            android:elevation="2dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:src="@drawable/bookmarks_24px"
            android:translationZ="2dp"
            app:tint="@color/quite_brown" />

        <ImageButton
            android:id="@+id/blog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:contentDescription="hello"
            android:elevation="2dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:src="@drawable/edit_note_24px"
            android:translationZ="2dp"
            app:tint="@color/quite_brown"
            android:onClick="onClickPost"
            />

        <ImageButton
            android:id="@+id/promotion"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:contentDescription="hello"
            android:elevation="2dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:scaleX="-1"
            android:src="@drawable/sell_24px"
            android:translationZ="2dp"
            app:tint="@color/quite_brown" />

        <ImageButton
            android:id="@+id/suggest"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:contentDescription="hello"
            android:elevation="2dp"
            android:minHeight="50dp"
            android:padding="10dp"
            android:src="@drawable/stylus_24px"
            android:translationZ="2dp"
            app:tint="@color/quite_brown" />


        <ImageButton
            android:id="@+id/game"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="30dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/white"
            android:contentDescription="hello"
            android:elevation="2dp"
            android:minHeight="50dp"
            android:onClick="onClickGameLauncher"
            android:padding="10dp"
            android:src="@drawable/sports_esports_fill_24px"
            android:translationZ="2dp"
            app:tint="@color/quite_brown" />
    </GridLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/imageslider"
        android:layout_width="370dp"
        android:layout_height="190dp"
        android:layout_marginTop="108dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="20"
            app:iss_delay="3000"
            app:iss_period="1000"
            app:iss_title_background="@drawable/gradient" />

    </androidx.cardview.widget.CardView>



    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="300dp"
            android:layout_height="5dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/rounded_line"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3"/>

        <View
            android:layout_width="45dp"
            android:layout_height="5dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/rounded_line"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="508dp"
            android:text="Trending"
            android:textColor="@color/brown"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/TrendingCard"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="60dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu">


        <!-- Gộp LinearLayout vào bên trong CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- Image on the left -->
            <ImageView
                android:id="@+id/trending_image"
                android:layout_width="30dp"
                android:layout_height="117dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/supershin" /> <!-- Placeholder image -->

            <!-- Textual information on the right -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/quite_brown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Location -->
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/quite_brown" />

                <!-- Hashtags -->
                <TextView
                    android:id="@+id/hashtags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/quite_brown" />

                <!-- Operating hours -->
                <TextView
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/quite_brown" />

                <!-- Distance and Rating -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/brown" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>